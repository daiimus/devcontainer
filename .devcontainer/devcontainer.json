{
    "name": "Evennia Development",
    "dockerFile": "Dockerfile",

    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },

    "forwardPorts": [4000, 4001, 4002],
    "portsAttributes": {
        "4000": {
            "label": "Evennia (Telnet)"
        },
        "4001": {
            "label": "Evennia (Webclient)",
            "protocol": "http"
        },
        "4002": {
            "label": "Evennia (Websocket)"
        }
    },

    "remoteUser": "vscode"
}
