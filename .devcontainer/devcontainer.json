{
  "name": "Evennia Development with BlightMUD",
  "dockerFile": "Dockerfile",
  "context": ".",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "uid": "1000",
      "gid": "1000"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest",
      "profile": "default"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.pylint",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "rust-lang.rust-analyzer"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },

  "forwardPorts": [4000, 4001, 4002, 4005],
  "portsAttributes": {
    "4000": {
      "label": "Evennia Web Server",
      "onAutoForward": "notify"
    },
    "4001": {
      "label": "Evennia Portal",
      "onAutoForward": "notify"
    },
    "4002": {
      "label": "Evennia Server",
      "onAutoForward": "notify"
    },
    "4005": {
      "label": "Evennia Web Client",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "/workspace/.devcontainer/setup.sh",
  
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/setup.sh,target=/workspace/.devcontainer/setup.sh,type=bind,consistency=cached"
  ]
}