{
    "name": "Evennia Development",
    "dockerFile": "Dockerfile",
    
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },

    "forwardPorts": [4000, 4005],
    "portsAttributes": {
        "4000": {
            "label": "Evennia Telnet Server"
        },
        "4005": {
            "label": "Evennia Web Client",
            "protocol": "http"
        }
    },

    "remoteUser": "vscode"
}